<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".About_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/icons"
        android:orientation="vertical">

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/topview" />

        <View
            android:id="@+id/view9"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:background="@drawable/upper" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="About Us"
                android:textColor="@color/topview"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                style="@style/entire_padding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/parth_img"
                        style="@style/image_corner"
                        android:layout_width="117dp"
                        android:layout_height="145dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        app:srcCompat="@drawable/parth" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/parth_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_person_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Parth Beldiya"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/parth_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  pbeldiya702@rku.ac.in"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/p_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_call"
                            android:fontFamily="sans-serif-medium"
                            android:text="  81405 37209"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/p_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_city"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Surat"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/d_img"
                        style="@style/image_corner"
                        android:layout_width="117dp"
                        android:layout_height="145dp"
                        android:layout_gravity="center_horizontal|center_vertical"
                        app:srcCompat="@drawable/dashrath" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/d_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_person_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Dashrath Makvana"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/d_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  dmakvana854@rku.ac.in"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/d_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_call"
                            android:fontFamily="sans-serif-medium"
                            android:text="  87339 00813"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/d_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_city"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Rajkot"
                            android:textSize="24sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        style="@style/image_corner"
                        android:layout_width="117dp"
                        android:layout_height="145dp"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        app:srcCompat="@drawable/me" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_person_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Dilip Sarvaiya"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_email_48px"
                            android:fontFamily="sans-serif-medium"
                            android:text="  dsarvaiya248@rku.ac.in"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_call"
                            android:fontFamily="sans-serif-medium"
                            android:text="  89054 55955"
                            android:textSize="24sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_city"
                            android:fontFamily="sans-serif-medium"
                            android:text="  Rajkot"
                            android:textSize="24sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view7"
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        android:background="@drawable/lower" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>