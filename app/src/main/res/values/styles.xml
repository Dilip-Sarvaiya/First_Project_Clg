<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="contact_styles">
        <item name="android:padding">10dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:textColorHint">@color/secondary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHighlight">@color/favorite</item>
        <item name="android:ems">10</item>
    </style>

    <style name="text_style">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:shadowColor">@color/accent</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="image_corner">
        <item name="cornerRadius">50dp</item>
    </style>

    <style name="entire_padding">
        <item name="android:paddingLeft">50dp</item>
    </style>

</resources>